{
  "name": "contributte/neonizer",
  "description": "Collection of useful scripts for manipulaton with NEON files. Support composer pre-install / post-install events. Set/get parameters, validate files.",
  "keywords": ["nette", "composer", "parameters", "neon", "interactive"],
  "type": "library",
  "license": ["MIT"],
  "homepage": "https://github.com/contributte/neonizer",
  "authors": [
    {
      "name": "Milan Felix Å ulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">=7.1",
    "nette/neon": "~2.4.2 || ~3.0.0"
  },
  "require-dev": {
    "ninjify/qa": "^0.7.1",
    "ninjify/nunjuck": "^0.2.0",
    "composer/composer": "^1.6.3",
    "mockery/mockery": "~1.0.0"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Neonizer\\": "src/"
    }
  },
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tester": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "coverage": [
      "tester -s -p php --colors 1 -C -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:0.9",
      "composer require -d temp/phpstan phpstan/phpstan-nette:0.9"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  }
}
